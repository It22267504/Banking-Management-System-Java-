<body>

<header>
    <div>
       <h3>Loan Management  </h3>
    </div>
</header>
<br>

<div class="container">
    <h4 class="text-center">List of Requests</h4>
    <hr>
    <div class="text-left">
        <a href="<%=request.getContextPath()%>/new" class="btn btn-success">Request for a Loan</a>
    </div>
    <br>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
             
                <th>Name</th>
                <th>Account Number</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Photo URL</th>
                <th>NIC</th>
                <th>Acc Type</th>
                <th>Amount</th>
                <th>Years</th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach var="application" items="${listApplications}">
                 <tr>
                   
                    <td><c:out value="${application.name}" /></td>
                    <td><c:out value="${application.accountNumber}" /></td>
                    <td><c:out value="${application.phoneNumber}" /></td>
                    <td><c:out value="${application.email}" /></td>
                    <td><c:out value="${application.photo}" /></td>
                    <td><c:out value="${application.nic}" /></td>
                    <td><c:out value="${application.type}" /></td>
                    <td><c:out value="${application.amount}" /></td>
                    <td><c:out value="${application.years}" /></td>
                    
                    <td>
                        <a href="edit?id=<c:out value='${application.id}' />" class="btn btn-primary">Edit</a>
                        <a href="delete?id=<c:out value='${application.id}' />" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </c:forEach>
        </tbody>
    </table>
    
    <section class="footer">

		<div class="container">
			<div class="row">
				<div class="footer-col">
					<h4>company</h4>
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="#">our services</a></li>
						<li><a href="#">privacy policy</a></li>
						<li><a href="#">Contact Us</a></li>
					</ul>
				</div>
				<div class="footer-col">
					<h4>get help</h4>
					<ul>
						<li><a href="#">FAQ</a></li>

					</ul>
				</div>
				<div class="footer-col">
					<h4>online Banking</h4>
					<ul>
						<li><a href="#">Online Banking Portal</a></li>
						<li><a href="#">Help</a></li>

					</ul>
				</div>
				<div class="footer-col">
					<h4>follow us</h4>
					<div class="social-links">
						<a href="#"><img src="images/facebook (1).svg" alt=""></a> <a
							href="#"><img src="images/instagram.svg" alt=""></a> <a
							href="#"><img src="images/linkedin.svg" alt=""></a> <a
							href="#"><img src="images/twitter.svg" alt=""></a>
					</div>
				</div>
			</div>
		</div>


	</section>
    
</div>

